pipeline {
    agent any

    stages {
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "sudo mvn clean install"
            }
            post {
                success {
                    archiveArtifacts artifacts: 'target/AbyssGGWave.jar'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}